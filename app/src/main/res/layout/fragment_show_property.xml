<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowProperty">

    <android.support.v7.widget.Toolbar
        android:id="@+id/discoverToolBar"
        android:layout_width="420dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/primary_colored"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/back32"
        app:popupTheme="@style/Theme.GuidelinesCompat"
        app:subtitleTextColor="@color/ms_black"
        app:theme="@style/Theme.GuidelinesCompat.Toolbar"
        app:title="@string/title_Discover"
        app:titleTextColor="@color/ms_black" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/discoverToolBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@color/ms_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="261dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:src="@drawable/house1"
                android:visibility="gone" />

            <TextView
                android:id="@+id/price"
                android:layout_width="292dp"
                android:layout_height="45dp"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-1dp"
                android:drawableEnd="@drawable/ic_money"
                android:fontFamily="@font/tajawallight"
                android:gravity="center"
                android:paddingTop="5dp"
                android:text="850 JD"
                android:textAlignment="textStart"
                android:textColor="@color/ms_black"
                android:textSize="24sp"
                android:visibility="gone"
                tools:ignore="RtlCompat" />

            <com.like.LikeButton
                android:id="@+id/fav_button"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="61dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                app:icon_size="25dp"
                app:icon_type="heart" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_below="@+id/price"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/tajawalmedium"
                android:text="Added on 28 Feb 2019"
                android:textColor="@color/ms_black"
                android:visibility="gone" />


            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:drawableEnd="@drawable/ic_placeholder"
                android:fontFamily="@font/tajawalmedium"
                android:gravity="center"
                android:text="Al Mafraq ,Prince Hussan Neighbor"
                android:textAlignment="textStart"
                android:textColor="@color/ms_black"
                android:textSize="18dp"
                android:visibility="gone"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/area"
                android:layout_width="151dp"
                android:layout_height="58dp"
                android:layout_below="@+id/address"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:drawableEnd="@drawable/ic_area"
                android:drawablePadding="2dp"
                android:fontFamily="@font/tajawalmedium"
                android:gravity="center"
                android:text="150 m"
                android:textAlignment="textStart"
                android:textColor="@color/ms_black"
                android:textSize="24sp"
                android:visibility="gone"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/bathroomNO"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_alignParentStart="true"
                android:layout_marginStart="176dp"
                android:layout_marginTop="2dp"
                android:drawableTop="@drawable/ic_bathtub"
                android:fontFamily="@font/tajawalmedium"

                android:gravity="center"
                android:text="2"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/ms_black"
                android:textSize="24sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/bedroomNO"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address"
                android:layout_alignParentStart="true"
                android:layout_marginStart="244dp"
                android:layout_marginTop="2dp"
                android:drawableTop="@drawable/ic_bedroom"
                android:fontFamily="@font/tajawalmedium"
                android:gravity="center"
                android:text="5"
                android:textAlignment="center"
                android:textColor="@color/ms_black"
                android:textSize="24sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/parking"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_below="@+id/address"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="345dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="8dp"
                android:text="TextView"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_parking" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bathroomNO"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="171dp"
                android:layout_marginEnd="152dp"
                android:fontFamily="@font/tajawalmedium"
                android:gravity="center"
                android:text="Description"
                android:textAlignment="viewStart"
                android:textColor="@color/ms_black"
                android:textSize="24sp"
                android:visibility="gone"
                tools:ignore="RtlCompat" />

            <TextView
                android:id="@+id/description"
                android:layout_width="421dp"
                android:layout_height="211dp"
                android:layout_below="@+id/textView17"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8dp"

                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/tajawalmedium"
                android:text="TextView"
                android:textColor="@color/ms_black"
                android:textSize="20sp"
                android:visibility="gone" />

            <Button

                android:id="@+id/call"
                android:layout_width="190dp"
                android:layout_height="57dp"
                android:layout_below="@+id/description"
                android:layout_alignParentStart="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:drawableStart="@drawable/ic_call"
                android:fontFamily="@font/tajawalmedium"
                android:text="Call"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/chat"
                android:layout_width="190dp"
                android:layout_height="57dp"
                android:layout_below="@+id/description"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                android:drawableStart="@drawable/ic_chat"
                android:fontFamily="@font/tajawalmedium"
                android:text="Chat"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="24sp"
                android:visibility="gone" />


        </RelativeLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/loadingItems"
        style="@style/Theme.GuidelinesCompat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="169dp"
        android:layout_marginTop="355dp" />

</RelativeLayout>