<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".NotificationsScreen">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:id="@+id/listEmptyView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:visibility="visible"

        >

        <ImageView
            android:id="@+id/heartSVG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_notification_list" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/heartSVG"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="Here where all the Notifications you will recived will show for you"
            android:textColor="#111111"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/signUpAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/heartSVG"
            android:layout_marginStart="8dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="@string/signUp_description"
            android:textColor="#111111"
            android:textSize="18sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/heartSVG"
            android:layout_marginStart="8dp"
            android:layout_marginTop="167dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:background="@drawable/btn_rounded"
            android:fontFamily="@font/nunito"
            android:gravity="center"
            android:text="@string/title_login"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#111111"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>