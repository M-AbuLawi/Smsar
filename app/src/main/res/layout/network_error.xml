<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/ms_white"
    >

    <ImageView
        android:id="@+id/network_conn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_network"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:contentDescription="Network connection error " />

    <TextView
        android:id="@+id/network_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:layout_below="@+id/network_conn"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/tajawalmedium"
        android:text="Please Check your network"
        android:textColor="@color/red_btn_bg_pressed_color"
        />

    <Button
        android:id="@+id/tryAgain"
        android:layout_width="130dp"
        android:layout_height="55dp"
        android:layout_below="@+id/network_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:textSize="18sp"
        android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
        android:text="Try Again"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
</RelativeLayout>