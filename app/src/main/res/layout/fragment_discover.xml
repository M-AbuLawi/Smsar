<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Discover"
    android:background="@color/ms_white"
    >

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/discoverToolBar"
        android:layout_width="420dp"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:minHeight="?attr/actionBarSize"
        android:visibility="visible"
        app:popupTheme="@style/Theme.Popup"
        app:theme="@style/Theme.GuidelinesCompat.Toolbar"
        app:title="@string/title_Discover"
        app:titleTextColor="@color/ms_black">

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/filter"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="58dp"
        android:background="@drawable/transparent_button"
        android:drawableRight="@drawable/filter40"
        android:drawablePadding="2dp"
        android:fontFamily="@font/tajawalregular"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="@string/title_filter"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="18sp" />


    <Button
        android:id="@+id/sort"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/transparent_button"
        android:drawableRight="@drawable/sort"
        android:drawablePadding="2dp"
        android:fontFamily="@font/tajawalregular"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="@string/title_sort"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:visibility="visible" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/discoverLV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_marginTop="108dp"
        android:layout_marginBottom="50dp"
        android:scrollbars="vertical"
        android:visibility="visible" />

</RelativeLayout>


