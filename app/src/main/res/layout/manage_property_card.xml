<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">


        <ImageView
            android:id="@+id/mainImage"
            android:layout_width="381dp"
            android:layout_height="237dp"
            app:srcCompat="@drawable/house1" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/tajawalmedium"
            android:text="city  "
            android:textColor="@android:color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="235dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/city"
            android:fontFamily="@font/cabin"
            android:gravity="center_horizontal"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:text="|"
            android:textAlignment="center"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="241dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/textView2"
            android:fontFamily="@font/tajawalregular"
            android:text="address"
            android:textColor="@color/caption"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mainImage"
            android:layout_alignParentStart="true"

            android:layout_marginStart="8dp"
            android:layout_marginTop="264dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="1dp"

            android:clickable="true"
            android:ellipsize="end"
            android:fontFamily="@font/tajawalbold"
            android:maxLines="2"
            android:paddingLeft="2dp"
            android:singleLine="false"
            android:text="description"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/caption"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="262dp"
            android:fontFamily="@font/tajawalmedium"

            android:text="price $ per ?"
            android:textColor="@color/caption"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="176dp"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:fontFamily="@font/cabin"
            android:linksClickable="true"
            android:text="Edit"
            android:textAlignment="center"
            android:textColor="@color/primary_colored_dark"
            android:textColorLink="@color/Primary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/no_view"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_like"
            android:gravity="center"
            android:text="5"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/no_call"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="87dp"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_view"
            android:gravity="center"
            android:text="5"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/eDelete"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price"
            android:layout_alignParentStart="true"
            android:layout_marginStart="275dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:fontFamily="@font/cabin"
            android:linksClickable="true"
            android:text="Delete"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textColorLink="@color/Primary"
            android:textSize="18sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>